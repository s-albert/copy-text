{
  "name": "copy-text",
  "displayName": "Copy Text",
  "description": "Offers more copy options: Copies text without colors, optionally adds metainfo like document name and date.",
  "version": "0.2.0",
  "publisher": "salbert",
  "icon": "images/icon.png",
  "keywords": [
    "copy",
    "text",
    "plain",
    "colors",
    "metainfo"
  ],
  "galleryBanner": {
    "color": "#252627",
    "theme": "dark"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.16.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "copy-text.copyTextOnly",
        "title": "Copy Without Syntax Highlighting"
      },
      {
        "command": "copy-text.copyAndAppendText",
        "title": "Copy Text and Append it to the Clipboard"
      },
      {
        "command": "copy-text.copyTextWithMetadata",
        "title": "Copy Text With Metainfo"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "copy-text.copyTextOnly",
          "group": "9_cutcopypaste"
        }
      ]
    },
    "keybindings": [
      {
        "command": "copy-text.copyTextOnly",
        "key": "ctrl+shift+c"
      },
      {
        "command": "copy-text.copyAndAppendText",
        "key": "ctrl+shift+a"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Copy text configuration",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "lint": "node ./node_modules/tslint/bin/tslint src/**/*.ts",
    "compile": "npm run lint && tsc -p ./",
    "publish": "vsce publish",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^6.0.111",
    "tslint": "^5.10.0"
  },
  "dependencies": {
    "clipboardy": "^1.2.3",
    "typescript": "^2.8.3",
    "vscode": "^1.1.18"
  },
  "bugs": {
    "url": "https://github.com/s-albert/copy-text/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/s-albert/copy-text.git"
  }
}
